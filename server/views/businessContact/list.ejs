<%- include ../partials/header.ejs %>


  
<div class="content">



        <div>
            <h1><%= title %></h1>
            <p>
            <%if(typeof displayName == 'string'&& displayName){%>
            <a href="/contact-list/add" class="listhead add">
             (+) Add a New Contact</a>
             <%}else{%>
             <%}%>
             </p>
            
            <table>
                <tr class="listhead">
                    <th colspan="2">First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <!--
                    <%if(typeof displayName == 'string'&& displayName){%>
                    <th>Edit</th>
                    <th>Delete</th>
                    <%}else{%>
                          
                    <%}%>-->
                </tr>

                <!-- foreach loop to loop everything out -->

                <% for(let count = 0; count < ContactList.length; count++) { %>
                    <tr class="listloop">
                        <td><%=count+1%>.</td>
                        <td><%= ContactList[count].firstname %></td>
                        <td><%= ContactList[count].lastname %></td>
                        <td><%= ContactList[count].email %></td>
                       
                        <td><%= ContactList[count].phone %></td>

                        <%if(typeof displayName == 'string'&& displayName){%>
                        <td class="edit">
                            <a href="/contact-list/edit/<%= ContactList[count]._id %>">
                               Edit  </a>
                        </td>
                        <td class="del">
                            <a href="/contact-list/delete/<%= ContactList[count]._id %>">
                             Delete</a>
                        </td>
                        <%}else{%>
                          
                        <%}%>
                    </tr>
                <% } %>
            </table>
        </div>


  </div>
  

